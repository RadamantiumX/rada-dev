---
interface Props{
    classProps: string
    href: string
}
const { classProps, href } = Astro.props
---
<!--Aca recibimos el icono y el texto -->
<a class=`rounded-full border-white/10 flex justify-center items-center gap-x-2 py-1 px-2 md:py-2 md:px-4 text-xs md:text-base bg-white/5 hover:scale-110 ${classProps} hover:bg-white/10 transition` href={href} target="_blank" rel="noopener noreferrer">
 <slot />    
</a>