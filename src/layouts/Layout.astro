---
import "@fontsource-variable/onest"
import SocialBanner from "../components/SocialBanner.astro"
import Footer from "../components/Footer.astro"
import Header from "../components/Header.astro";
import SocialNav from "../components/SocialNav.astro";
import OtherSocials from "../components/OtherSocials.astro"
import LangButtons from "../components/LangButtons.astro"
import i18next, { t } from "i18next"
import {  Trans, HeadHrefLangs } from "astro-i18next/components";

interface Props {
	title: string;
	description: string;
	welcome: string;
	name: string;
	hdescription: string;
	location: string;

	home: string;
	about: string;
	projects: string;
	experience: string;
	contact: string;

	carrer: string;
	other: string;
}

const { description, title, welcome, name, hdescription, location, home, about, projects, experience, contact, carrer, other } = Astro.props;
---

<!doctype html>
 
<html lang={ i18next.language }>
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
		
		<title>{title}</title>
		<HeadHrefLangs/>
	</head>
	<body>
	 
		<Header
		 welcome={welcome}
         name={name}

		 hdescription={hdescription}
		 location={location}

         home={home}
		 about={about}
		 projects={projects}
		 experience={experience}
		 contact={contact}
		/>
	    <LangButtons classAdds="sm:flex hidden"/>
		<SocialBanner title={`${carrer}`} emoji="‚¨á">
          <SocialNav/>
		</SocialBanner>
		<slot />
		<SocialBanner title={`${other}`} emoji="üöÄ">
			<OtherSocials />
		</SocialBanner>	
		<Footer/>
	
	</body>

</html>

<style is:global>
	:root {
		color-scheme: light dark;
	}
	html {
		
		font-family: 'Onest Variable', system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	body {
		color: white;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
background: #2B292D;
background: radial-gradient(at center top, #2B292D, #221B22);
		
	}
	header {
		height: 70vh;
		background-image: linear-gradient(to top,  rgba(24, 25, 26, 0.404)0%,rgba(20, 2, 48, 0.404)100%), url(../../public/projects/ultimate-bg-working.webp);
		/*background-image: -webkit-linear-gradient(120deg, #013A6B 45%, #4CBFFF 45%);*/
		background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
	}
	.banner-social {
		height: 20vh;
		background-image: linear-gradient(to top,  rgba(23, 23, 24, 0.404)0%,rgba(13, 13, 14, 0.404)100%);
		/*background-image: -webkit-linear-gradient(120deg, #013A6B 45%, #4CBFFF 45%);*/
		background-size: cover;
        background-repeat: no-repeat;
       /* background-attachment: fixed;*/
        background-position: center;
	}

	
	
	/* Si el usuario tiene desactivada las animaciones, no las ver√°. */
	@media (prefers-reduced-motion: reduce){
		html {
			scroll-behavior: auto;
		}
	}
</style>
