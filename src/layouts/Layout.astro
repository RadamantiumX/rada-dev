---
import "@fontsource-variable/onest"
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro"
import Header from "../components/Header.astro";
interface Props {
	title: string;
	description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content={description} />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		
		<title>{title}</title>
	</head>
	<body>	
		<Header/>
		<slot />
		<Footer/>
	</body>
</html>
<style is:global>
	:root {
		color-scheme: light dark;
	}
	html {
		
		font-family: 'Onest Variable', system-ui, sans-serif;
		scroll-behavior: smooth;
	}
	body {
		color: white;
		display: flex;
		flex-direction: column;
		min-height: 100vh;
		background-image: linear-gradient(to right,#0d0c0c  10%, rgb(22, 18, 18) 100%);
		
	}
	header {
		height: 100vh;
		background-image: linear-gradient(to top,  rgba(24, 26, 29, 0.404)0%,rgba(50, 24, 92, 0.404)100%), url(https://images.pexels.com/photos/167684/pexels-photo-167684.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1);
		/*background-image: -webkit-linear-gradient(120deg, #013A6B 45%, #4CBFFF 45%);*/
		background-size: cover;
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-position: center;
	}
	
	/* Si el usuario tiene desactivada las animaciones, no las ver√°. */
	@media (prefers-reduced-motion: reduce){
		html {
			scroll-behavior: auto;
		}
	}
</style>
