---
import Layout from "../../layouts/Layout.astro";
import BriefcaseIcon from "../../components/icons/Briefcase.astro";
import CodeIcon from "../../components/icons/Code.astro";
import MailOpenedIcon from "../../components/icons/MailOpened.astro";
import SectionContainerAbout from "../../components/SectionContainerAbout.astro";
import About from "../../components/About.astro";
import Skills from "../../components/Skills.astro";
import Experience from "../../components/Experience.astro";
import SectionContainer from "../../components/SectionContainer.astro";
import Projects from "../../components/Projects.astro";
import Contact from "../../components/Contact.astro";
import SectionTitle from "../../components/SectionTitle.astro";
import i18next, { t, changeLanguage } from "i18next";

changeLanguage("es");
---

<Layout 
title= {t("site.title")}
description={t("site.description")}

welcome={t("header.welcome")}
name={t("header.name")}
hdescription={t("header.hdescription")}
location={t("header.location")}

home={t("nav.home")}
about={t("nav.about")}
projects={t("nav.projects")}
experience={t("nav.experience")}
contact={t("nav.contact")}

carrer={t("socialwork.carrer")}
other={t("othersocials.other")}
>
	<main>
	<SectionContainerAbout>
	  <About
	  title={t("about.title")}  
	  p1={t("about.p1")}
	  italic={t("about.italic")}
	  p2={t("about.p2")}
	  semibold={t("about.semibold")}
	  p3={t("about.p3")}
	  p4={t("about.p4")}
	  />
	</SectionContainerAbout>	
	<SectionContainerAbout>
		<Skills
		title={t("skills.title")}
		p1={t("skills.p1")}
		p2={t("skills.p2")} 
		/>
	</SectionContainerAbout>
     
	<div class="px-4 sm:px-0">
	  <!--Experience-->
	  <SectionContainer class="mt-8" id="experience">
		<SectionTitle>
			<BriefcaseIcon class="size-7 text-yellow-500"/>
			{t("experience.title")}
		</SectionTitle>
		 <Experience
		 date={t("experience.date")}
		 sub1={t("experience.sub1")}
		 desc1={t("experience.desc1")}
		 sub2={t("experience.sub2")}
		 desc2={t("experience.desc2")}
		 />
	  </SectionContainer>
	  <!--Experience-->

	  <!--Projects -->
	  <SectionContainer id="projects">
		<SectionTitle>
			<CodeIcon class="size-7 text-yellow-500"/>
			{t("projects.title")}
		</SectionTitle>
		<Projects
		sub1={t("projects.sub1")}
		desc1={t("projects.desc1")}
		sub2={t("projects.sub2")}
		desc2={t("projects.desc2")}
		sub3={t("projects.sub3")}
		desc3={t("projects.desc3")}
		sub4={t("projects.sub4")}
		desc4={t("projects.desc4")}
		/>
	  </SectionContainer>
	  <!--Projects -->
  
	  <SectionContainer id="contact">
         <SectionTitle>
			<MailOpenedIcon class="size-7 text-yellow-500"/>
			{t("contact.title")}
		 </SectionTitle> 
		 <Contact
		 name={t("contact.name")}
		 message={t("contact.message")}
		 send={t("contact.send")}
		 />
	  </SectionContainer>
   </div>

	</main>
</Layout>

